@using Tamagotchi.Models;

<h1>List of Tamagotchi</h1>

<ul>
@if (Model.Count == 0)
{
  <p>You have no items in your to do list!</p>
}
@if(Model.Count != 0)
{
  @foreach (Item item in Model)
  {
    <li><a href='/items/@item.GetId()'>@item.GetName()</a></li>
  }
}
</ul>



<a href="/items/new">Add a new Tamagotchi.</a>

<form action="/items/delete" method="post">
  <button type="submit" name="button">Destroy All Tamagotchi</button>
</form>
